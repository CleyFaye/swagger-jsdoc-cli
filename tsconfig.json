{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2019",
    "module": "ESNEXT",
    "lib": ["es2019"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "tsBuildInfoFile": "./.tsbuildinfo",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
